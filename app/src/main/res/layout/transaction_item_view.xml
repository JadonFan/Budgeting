<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?android:expandableListPreferredItemPaddingLeft"
        android:paddingEnd="?android:expandableListPreferredItemPaddingLeft"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

    <!-- TODO put hardcoded values into the dimen resource file -->
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/currItemNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/currAmountText"
                android:text="Hello World!"
                android:textSize="21sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/currAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Hello World!"
                android:textStyle="bold"
                android:textSize="21sp"
                android:singleLine="true" />

    </RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/currLocationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hello World!"
                android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>